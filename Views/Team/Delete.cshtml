    NETD 3202 - Lab 5
    December 6, 2020
    This ASP.NET Core application is designed to allow the user to enter the information for a curling game, including the teams and the scores, and also provides functionality for editing, and deleting results.
    This view deletes an existing record from the database.
    The template for this application is the same template provided for Web Development - Intermediate (WEBD 3201).
 -->
<!--Page header-->
<h1>Delete a score</h1>
<hr />
<!--Displays all content for the delete page-->
<dl class="row">
    <!--Outputs the lead-->
    <dt class="col-sm-2">
        Lead
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.leadName)
    </dd>
    <!--Outputs the second-->
    <dt class="col-sm-2">
        Second
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.secondName)
    </dd>
    <!--Outputs the vice-->
    <dt class="col-sm-2">
        Vice
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.viceName)
    </dd>
    <!--Outputs the skip-->
    <dt class="col-sm-2">
        Skip
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.skipName)
    </dd>
</dl>

<!--Submits the form to delete the record-->
<form class="form-signin" asp-action="Delete">
    <input type="hidden" asp-for="teamID" />
    <button type="submit" class="btn btn-danger btn-block">Delete</button>
    <!--Returns to the index-->
    <a asp-action="Index">Back to List</a>
</form>